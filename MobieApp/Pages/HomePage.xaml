<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobieApp.Pages.HomePage"
             Title="Home">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="sync.png" Command="{Binding SyncProfileCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="5">
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"></ActivityIndicator>
            <Image Source="tutwuri.png" WidthRequest="150" Margin="30"></Image>
            <StackLayout >
                <Label Text="DINAS PENDIDIKAN DAN KEBUDAYAAN"  HorizontalOptions="Center"></Label>
                <Label Text="SEKOLAH DASAR NEGERI INPRES TANJUNG RIA"  HorizontalOptions="Center"></Label>
            </StackLayout>
            <StackLayout>
                <Label Text="APLIKASI PENDAFTARAN ONLINE"  HorizontalOptions="Center"></Label>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>